<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Configurações">
        <TargetFramework>net6.0</TargetFramework>
        <LangVersion>10</LangVersion>
        <Title>Lensophy.Infrastructure</Title>
        <Authors>Raphael Moreira</Authors>
        <Description>Infraestrutura.</Description>
        <Copyright>Lensophy® - 2023</Copyright>
        <Company>Moreira | Arquiteto de soluções</Company>
        <Product>Lensophy®</Product>
        <Nullable>enable</Nullable>
        <ImplicitUsings>false</ImplicitUsings>
        <IsPackable>false</IsPackable>
        <AssemblyVersion>0.0.0</AssemblyVersion>
    </PropertyGroup>

    <PropertyGroup Label="Documentação" Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>Doc\Lensophy.Infrastructure.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup Label="Csharp">
        <Using Include="System" />
        <Using Include="System.ComponentModel" />
        <Using Include="System.Threading.Tasks" />
    </ItemGroup>
    
    <ItemGroup Label="Lensophy">
        <Using Include="Lensophy.Domain.Dto" />
        <Using Include="Lensophy.Domain.Interface" />
        <Using Include="Lensophy.Infrastructure.Util" />
        
        <ProjectReference Include="..\Lensophy.Domain\Lensophy.Domain.csproj" />

        <InternalsVisibleTo Include="Lensophy" />
        <InternalsVisibleTo Include="Lensophy.IntegrationTest" />
    </ItemGroup>
    
    <ItemGroup Label="Pacotes">
      <PackageReference Include="Jil" Version="2.17.0" />
      <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
    </ItemGroup>
    
</Project>
